@page
@model Web.Pages.Cart.IndexModel
@{
    ViewData["Title"] = "Index";
}

<h1>Cart</h1>

<table class="table table-borderless">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CartItems[0].Product)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CartItems[0].Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CartItems[0].Product.Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.CartItems)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Product.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    $@Html.DisplayFor(modelItem => item.Product.Price)
                </td>
                <td>
                    <a class="btn btn-primary" asp-action="@Model.RemoveCartItem(item.ProductId)">Remove</a>
                </td>
            </tr>
        }
        <tr>
            <td></td>
            <td></td>
            <td>Total: $@Html.DisplayFor(model => model.CartTotal)</td>
            <td></td>
        </tr>
    </tbody>

</table>
<a class="btn btn-primary" asp-page="/Cart/Checkout">Checkout</a>
