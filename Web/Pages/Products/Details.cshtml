@page
@model Web.Pages.Products.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Product</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Manufacturer)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Manufacturer)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Details)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Details)
        </dd>
    </dl>
    <form method="post">
        <input asp-for="Input.ProductId" value="@Model.Product.Id" type="hidden" />
        <span asp-validation-for="Input.ProductId" value="@Model.Product.Id"></span>
        <label asp-for="Input.Quantity"></label>
        <input asp-for="Input.Quantity" placeholder="1" min="0" />
        <br />
        <button type="submit" class="btn btn-primary">Add To Cart</button>
    </form>
</div>
<div>
    @if (User.IsInRole("Admin"))
    {
        <a asp-page="./Edit" asp-route-id="@Model.Product.Id">Edit</a> <text>|</text>
}

    <a asp-page="./Index">Back to Products</a>
</div>
