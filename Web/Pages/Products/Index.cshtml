@page
@model Web.Pages.Products.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Products</h1>
<form>
    <label><input type="text" name="name" /></label>
    &nbsp;
    <button class="btn btn-primary">Search</button>
</form>
<p>
    @if (User.IsInRole("Admin"))
    {
        <a asp-page="Create">Create New</a>
    }
</p>
<div class="container-fluid">
    <div class="row flex-row overflow-auto">
        @foreach (var item in Model.Product)
        {
        <div class="col-3 card">
            <div class="card-body">
                <a asp-page="./Details" asp-route-id="@item.Id"><img src="~/Assets/300.png" class="figure-img img-fluid rounded card-img-top" /></a>
                
                    <h5>@item.Name</h5>
                    <h6>@item.Manufacturer</h6>
                    <p>@item.Price</p>
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> <text>|</text>
                        <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a> <text>|</text>
                    }
                    <a asp-page="./Details" asp-route-id="@item.Id">Details</a>
                </div>
            </div>
            }
        </div>
</div>

